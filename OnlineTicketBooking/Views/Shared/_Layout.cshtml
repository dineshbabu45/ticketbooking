<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @using System.Web.Optimization
  
    <link href="~/Style/StyleSheet.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>

</head>
<body>
    
        <div class="container">
            <div>
                @Html.ActionLink("Home", "Search", "Booking", new { area = "" }, new { @class = "navbar-brand-home" })
               

            </div>
            <div>
                @Html.Partial("_LoginPartial")
                @Html.ActionLink("Need Help?", "Help", "Booking", new { area = "" }, new { @class = "navbar-brand" })
                @if (System.Web.HttpContext.Current.User.IsInRole("True"))
                {
                    @Html.ActionLink("Manage Bus", "Index", "Bus", null, new { @class = "navbar-brand-home" })
                    @Html.ActionLink("Category", "Index", "Category", null, new { @class = "navbar-brand-home" })
                    @Html.ActionLink("Add Category", "AddCategory", "Category", null, new { @class = "navbar-brand-home" })
                }
            </div>
              
            </div>

  

    <div>
        <div new class="content">

            @RenderBody()
        </div>
      
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
   
</body>
</html>